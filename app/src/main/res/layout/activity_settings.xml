<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/gradient_orca">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp">

                <TextView
                    android:id="@+id/sss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Radius"
                    android:textSize="20sp"
                    app:layout_constraintHorizontal_bias="0.042"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="7dp"
                    android:textColor="#FFFFFF"/>

                <EditText
                    android:id="@+id/radiusEdit"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="291dp"
                    android:layout_marginStart="291dp"
                    android:editable="false"
                    android:enabled="false"
                    android:text="0 km"
                    android:textColor="#FFFFFF"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>


            <SeekBar
                android:id="@+id/seekBar2"
                style="@android:style/Widget.Material.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:max="20000" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/mmm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0 km"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/mmmm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="20000 km"
                    android:textSize="20sp"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="10dp"
                    android:textColor="#FFFFFF"/>

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/sssss"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp"
                android:text="Type"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioCitySearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:onClick="onRadioButtonClicked"
                    android:text="City"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/radioMountSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:textColor="#FFFFFF"
                    android:text="Mountain" />

                <RadioButton
                    android:id="@+id/radioRiverSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:textColor="#FFFFFF"
                    android:text="River" />

                <RadioButton
                    android:id="@+id/radioSeaSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:textColor="#FFFFFF"
                    android:text="Sea" />
            </RadioGroup>


            <TextView
                android:id="@+id/ssssss"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp"
                android:text="Date range"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"

                android:textSize="20sp" />



            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.Guideline
                    android:id="@+id/horizontal_middle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5"
                    tools:layout_editor_absoluteX="220dp"
                    tools:layout_editor_absoluteY="81dp"
                    />

                <Button
                    android:id="@+id/button_from"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:text="From"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginRight="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"

                    android:backgroundTint="@color/colorAccent"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="0dp"
                    android:onClick="datePicker"/>

                <EditText
                    android:id="@+id/edit_from"
                    android:layout_width="219dp"
                    android:layout_height="46dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:ems="10"
                    android:inputType="date"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="0dp"
                    android:textColor="#FFFFFF"
                    app:layout_constraintLeft_toRightOf="@+id/button_from"/>
                />



            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.Guideline
                    android:id="@+id/horizontal_middle_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5"
                    tools:layout_editor_absoluteX="220dp"
                    tools:layout_editor_absoluteY="81dp"
                    />

                <Button
                    android:id="@+id/button_to"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:text="To"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginRight="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"

                    android:backgroundTint="@color/colorAccent"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="0dp"
                    android:onClick="datePicker"/>

                <EditText
                    android:id="@+id/edit_to"
                    android:layout_width="219dp"
                    android:layout_height="46dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:ems="10"
                    android:inputType="date"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="0dp"
                    android:textColor="#FFFFFF"
                    app:layout_constraintLeft_toRightOf="@+id/button_to"/>
            </android.support.constraint.ConstraintLayout>

            <Button
                android:id="@+id/advanced_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginTop="5sp"
                android:backgroundTint="@color/colorAccent"
                android:text="Search"
                android:textColor="#FFFFFF" />


        </LinearLayout>




    </ScrollView>



</LinearLayout>